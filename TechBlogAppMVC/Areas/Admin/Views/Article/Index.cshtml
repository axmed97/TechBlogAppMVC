@model IEnumerable<Article>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="/admin/article/create" class="m-0 font-weight-bold text-primary">Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>User</th>
                            <th>Category</th>
                            <th>Tags</th>
                            <th>Image</th>
                            <th>Status</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>User</th>
                            <th>Category</th>
                            <th>Tags</th>
                            <th>Image</th>
                            <th>Status</th>
                            <th>#</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.User.Name</td>
                                <td>@item.Category.CategoryName</td>
                                <td>
                                    @foreach (var tag in item.ArticleTags)
                                    {
                                        <span>@tag.Tag.TagName / </span>
                                    }
                                </td>
                                <td><img src="@item.PhotoUrl" alt="@item.Title" width="150" /></td>
                                <td>@(item.IsActive ? "active" : "deactive")</td>
                                <td>
                                    <a href="/admin/article/edit/@item.Id/@item.SeoUrl" class="btn btn-warning w-100">Edit</a>
                                    <a href="#" class="btn btn-danger w-100">Delete</a>
                                    <a href="#" class="btn btn-success w-100">Detail</a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
