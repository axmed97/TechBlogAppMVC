@model Category

@if (ViewData["CategoryError"] != null)
{
    <div class="col-lg-6 m-auto mb-5">
        <div class="alert alert-danger shadow" role="alert">
            @ViewData["CategoryError"]
        </div>
    </div>
}
<div class="col-lg-6 m-auto">
    <div class="card shadow p-3 mb-4">
        <form asp-action="Create" asp-controller="Category" method="post">
            <div class="form-group">
                <label asp-for="CategoryName">Category name</label>
                <input  class="form-control" type="text" asp-for="CategoryName" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success btn-sm" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>